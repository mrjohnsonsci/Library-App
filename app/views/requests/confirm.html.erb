<p id="notice"><%= notice %></p>

<div class="page-header">

<div class="row">
<div class="col-md-6"</div>
  

   <h1>Unprocessed Requests</h1>
<h3>I will be processing these requests once or twice a month. </h3>
 <table class="table table-striped">



  <thead>
    <tr>
      <th>Library</th>
      <th>Program</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request|  %>
      <tr>
        <% if request.confirmation != true %>
          <td><%= request.library %></td>
          <td><%= request.program %></td>
          <td><%= request.date %></td>
          <td><%= request.time %></td>
          <td><%= link_to 'Show', request  %></td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

