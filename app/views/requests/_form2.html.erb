<%= form_for(request) do |f| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<%= simple_form_for @request do |f| %>
  <%= f.input :library, label: 'What is the name of your library?' %>
  <%= f.input :address, label: 'What is the address of your library?' %>  
  <%= f.input :librarian, label: 'Contact Name'%>
  <%= f.input :program, label: 'Which program would you like to request?' %>
  <%= f.input :email, label: 'Contact email' %>
  <%= f.input :phone, label: 'Phone Number'%>
  <%= f.input :date, hint: '"June 16th"' %>
  <%= f.input :time, hint: '"11:00am"'%>
 <%= f.input :confirmation %>
  <%= f.button :submit %>
<% end %>
<% end %>
